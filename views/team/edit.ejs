<%include ../partials/header%>
<link rel="stylesheet" href="/css/cms.css">
<div class="container member-form">
    <div class="alert alert-primary" role="alert">
        You are Editing <%=member.name%>'s info
    </div>
    <form action="/projects/<%=project_id%>/team/<%=member._id%>?_method=PUT" method="POST">
        <div class="form-group ">
            <label for="inputName" class="form-label">Name</label>
            <input type="text" name="name" class="form-control" id="inputName" value="<%=member.name%>">
        </div>
        <div class="form-group ">
            <label for="inputName" class="form-label">Role</label>
            <input type="text" name="role" class="form-control" id="inputName" value="<%=member.role%>">
        </div>
        <div class="form-group ">
            <label for="inputName" class="form-label">Additional Information</label>
            <input type="text" name="email" class="form-control" id="inputName" value="<%=member.email%>">
        </div>
        <button class="button"> SUBMIT</button>
    </form>