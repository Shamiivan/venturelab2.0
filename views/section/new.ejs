<h1>Section New</h1>

<%include ../partials/header%>

<div class="container ">
    <form action="/projects/<%=project._id%>/section/" method="POST" enctype="multipart/form-data">
        <div class="form-group ">
            <label for="inputName" class="form-label">What's the title of the section</label>
            <input type="text" name="title" class="form-control" id="inputName" placeholder="Title">
        </div>
        <div class="form-group">
            <label class="form-label" for="projectDescription">Paragraph 1</label>
            <textarea name="p1" class="form-control" id="projectDescription" rows="4"></textarea>
        </div>
        <div class="form-group">
            <label class="form-label" for="projectDescription">Paragraph 2</label>
            <textarea name="p2" class="form-control" id="projectDescription" rows="4"></textarea>
        </div>
        <div class="form-group">
            <label class="form-label" for="projectDescription">Paragraph 3</label>
            <textarea name="p3" class="form-control" id="projectDescription" rows="4"></textarea>
        </div>

        <div class="form-group">
            <label for="imageFile">Upload an Image</label>
            <input type="file" name="image" class="form-control-file" id="imageFile">
        </div>

        <button> SUBMIT</button>
    </form>
