<%include ../partials/header%>
<div class="page-wrapper">
    <link rel="stylesheet" href="/css/forum.css">
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <p class="lead"></p>
                <div class="list-group">
                    <li class="list-group-item active">Info 1</li>
                    <li class="list-group-item">Info 2</li>
                    <li class="list-group-item">Info 3</li>
                </div>
            </div>
            <div class="col-md-9">
                <div class="thumbnail">
                    <!-- <img class="img-responsive"
                        src="http://curiouscat.net/uploads/quote/twitter_image/3734/in-god-we-trust-3734-1.png"> -->
                    <div class="caption-full">
                        <h4><a><%=discussion.topic%></a></h4>
                        <h5>created by Unknown author On <span><%= discussion.created %></span> </h5>

                        <p><%=discussion.content%></p>
                    </div>
                </div>
                <div class="well">
                    <div class="text-right">

                        <a class="" href=""><i class="far fa-comment fa-3x"></i></a>
                        <a href="/forum">View other Topics</a>
                    </div>

                    <form action="/forum/discussion/<%= discussion.id %>/comments" method="POST">
                        <div class="form-group">
                            <textarea name="comment[text]" id="" cols="5" rows="2"></textarea>
                        </div>

                        <button class="right button">Submit!</button>

                    </form>


                    <hr>
                    <% discussion.comments.forEach((comment)=>{ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= //comment.author.username %>User X</strong>
                            <span class="pull-right">10 days ago</span>
                            <p>
                                <%= comment.text %>
                            </p>
                            <% //if(currentUser && comment.author.id.equals(currentUser._id)){ %>
                            <!-- <a class="btn btn-xs btn-warning" href="#">Edit</a>
                            <form id="delete-form" action="#" method="POST">
                                <input type="submit" class="btn btn-xs btn-danger" value="Delete">
                            </form> -->
                            <% //} %>
                        </div>
                    </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>

</div>
<% include ../partials/footer%>